{
  "name": "feathers-harperdb",
  "version": "0.0.1",
  "description": "A HarperDB adapter for FeathersJS",
  "main": "lib",
  "types": "types",
  "directories": {
    "lib": "lib",
    "test": "test"
  },
  "dependencies": {
    "@feathersjs/adapter-commons": "^4.5.12",
    "@feathersjs/errors": "^4.5.12",
    "harperive": "^2.0.1",
    "is-plain-object": "^5.0.0",
    "knex": "^1.0.3",
    "opossum": "^6.3.0"
  },
  "devDependencies": {
    "@feathersjs/adapter-tests": "^4.5.12",
    "@feathersjs/express": "^4.5.12",
    "@feathersjs/feathers": "^4.5.12",
    "@feathersjs/transport-commons": "^4.5.12",
    "@semantic-release/git": "^10.0.1",
    "eslint": "^8.10.0",
    "mocha": "^9.2.1",
    "nodemon": "^2.0.15",
    "nyc": "^15.1.0",
    "semistandard": "^16.0.1",
    "sinon": "^13.0.1"
  },
  "engines": {
    "node": ">= 12"
  },
  "scripts": {
    "lint": "semistandard --fix",
    "mocha": "mocha --recursive test/",
    "mocha1": "mocha --recursive --config .mocharc.json test/",
    "test": "printf '\\33c\\e[3J' && npm run lint && npm run mocha",
    "test:dev": "npm run mocha -- --watch --recursive --watch-files src/**/*.js,test/**/*.js test/**/*.test.js",
    "coverage": "nyc npm run mocha"
  },
  "semistandard": {
    "env": [
      "mocha"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jamesvillarrubia/feathers-harperdb.git"
  },
  "keywords": [
    "feathers",
    "harperdb",
    "feathers-plugin"
  ],
  "author": {
    "name": "James Villarrubia",
    "email": "james.villarrubia@gmail.com"
  },
  "licenses": [
    {
      "type": "MIT",
      "url": "https://github.com/jamesvillarrubia/feathers-harperdb/blob/develop/LICENSE"
    }
  ],
  "bugs": {
    "url": "https://github.com/jamesvillarrubia/feathers-harperdb/issues"
  },
  "homepage": "https://github.com/jamesvillarrubia/feathers-harperdb#readme",
  "release": {
    "branches": [
      {
        "name": "main"
      },
      {
        "name": "alpha",
        "channel": "alpha",
        "prerelease": true
      }
    ],
    "plugins": [
      "@semantic-release/git",
      [
        "@semantic-release/npm",
        {
          "npmPublish": true
        }
      ],
      [
        "@semantic-release/commit-analyzer",
        {
          "preset": "angular",
          "releaseRules": [
            {
              "type": "refactor",
              "release": "patch"
            },
            {
              "type": "style",
              "release": "patch"
            },
            {
              "type": "perf",
              "release": "patch"
            },
            {
              "type": "chore",
              "release": "patch"
            }
          ]
        }
      ]
    ]
  }
}
