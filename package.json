{
  "name": "feathers-harperdb",
  "version": "0.0.0-semantic-release",
  "description": "A HarperDB adapter for FeathersJS",
  "main": "lib",
  "types": "types",
  "directories": {
    "lib": "lib",
    "test": "test"
  },
  "dependencies": {
    "@feathersjs/adapter-commons": "^5.0.13",
    "@feathersjs/commons": "^5.0.13",
    "@feathersjs/errors": "^5.0.13",
    "harperive": "^2.0.1",
    "is-plain-object": "^5.0.0",
    "knex": "^3.1.0"
  },
  "devDependencies": {
    "@feathersjs/adapter-tests": "^5.0.13",
    "@feathersjs/feathers": "^5.0.13",
    "@semantic-release/commit-analyzer": "^11.1.0",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/npm": "^11.0.2",
    "eslint": "^8.56.0",
    "mocha": "^10.2.0",
    "nock": "^13.4.0",
    "nyc": "^15.1.0",
    "semistandard": "^17.0.0"
  },
  "engines": {
    "node": ">= 12"
  },
  "scripts": {
    "lint": "semistandard --fix",
    "mocha": "mocha --recursive test/**/*.test.js",
    "testd": "docker-compose up -d && npm run test && docker-compose down",
    "test": "printf '\\33c\\e[3J' && npm run lint && npm run coverage",
    "test:dev": "printf '\\33c\\e[3J' && npm run lint && npm run mocha -- --watch --watch-files ./test/**/*,./lib/**",
    "coverage": "nyc npm run mocha"
  },
  "semistandard": {
    "env": [
      "mocha"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jamesvillarrubia/feathers-harperdb.git"
  },
  "keywords": [
    "feathers",
    "harperdb",
    "feathers-plugin"
  ],
  "author": {
    "name": "James Villarrubia",
    "email": "james.villarrubia@gmail.com"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/jamesvillarrubia/feathers-harperdb/issues"
  },
  "homepage": "https://github.com/jamesvillarrubia/feathers-harperdb#readme",
  "release": {
    "branches": [
      {
        "name": "main"
      },
      {
        "name": "alpha",
        "channel": "alpha",
        "prerelease": true
      },
      {
        "name": "beta",
        "channel": "beta",
        "prerelease": true
      }
    ],
    "plugins": [
      "@semantic-release/git",
      [
        "@semantic-release/npm",
        {
          "npmPublish": true
        }
      ],
      [
        "@semantic-release/commit-analyzer",
        {
          "preset": "angular",
          "releaseRules": [
            {
              "type": "refactor",
              "release": "patch"
            },
            {
              "type": "style",
              "release": "patch"
            },
            {
              "type": "perf",
              "release": "patch"
            },
            {
              "type": "chore",
              "release": "patch"
            }
          ]
        }
      ]
    ]
  }
}
